15.# Creating a file and performing operations

# 1. Create and write to the file
with open("output.txt", "w") as file:
    file.write("Hello, this is a text file.\n")
    file.write("This file contains some sample text.\n")

# 2. Read from the file
print("Reading the file content:")
with open("output.txt", "r") as file:
    content = file.read()
    print(content)

# 3. Append to the file
with open("output.txt", "a") as file:
    file.write("This is some additional text added to the file.\n")

# 4. Read again to show the appended content
print("Reading the updated file content:")
with open("output.txt", "r") as file:
    updated_content = file.read()
    print(updated_content)
